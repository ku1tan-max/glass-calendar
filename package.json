{
  "name": "glass-calendar",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "electron .",
    "electron:build": "next build && electron-builder"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "electron-is-dev": "^3.0.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-pwa": "^5.6.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^34.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.glass.calendar",
    "productName": "Glass Calendar",
    "files": [
      "out/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": ["nsis"],
      "icon": "public/icon-512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}